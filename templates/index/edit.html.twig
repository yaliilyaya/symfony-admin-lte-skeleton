                            <label for="field-1" class="col-sm-4 col-form-label">Краткое описание вопроса</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="field-1" placeholder="Краткое описание вопроса"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Дата/Время обращения</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="field-1" placeholder="Дата/Время обращения">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Дата/Время обновления</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="field-1" placeholder="Дата/Время обращения">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Статус</label>
                            <div class="col-sm-8">
                                <select  class="form-control" id="field-1"></select>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="btn-group-vertical  btn-block">
                            <a href="{{ path('job-detail') }}" class="btn btn-success float-right">Сохранить</a>
                        </div>
                    </div>
                    <!-- /.card-footer -->
                </form>
            </div>

        </div>

    </div>
